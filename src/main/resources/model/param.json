{
  "name": "Param",
  "shortcut": {
    "regEx": {
      "pattern": "^\\s*(\\$\\w+)\\s*\\(([^)]+)\\)?\\s*$",
      "assignTo": [
        "name",
        "type"
      ]
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "node": "scalar",
      "required": true,
      "description": "String (must start with $)",
      "tooltip": "The name of the parameter. Has to start with a `$` sign."
    },
    "type": {
      "type": "type",
      "node": "scalar",
      "description": "Type (iri or primitive)",
      "tooltip": "The data type of the parameter. Can be used to restrict the parameter to a specific type"
    }
  }
}
